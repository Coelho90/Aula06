
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>COTI Informatica</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

</head>
<body class="container">

    <h2>Cadastro de Planos</h2>
    <a href="/Home/Index">Página inicial</a>
    <hr/>

    @model Projeto.WEB.Models.PlanoCadastroViewModel

    @using (Html.BeginForm())
    {
        <div class="row">
            <div class="col-md-4">
                <label>Nome do Plano:</label>
                @Html.TextBoxFor(model => model.Nome,
                    new
                         {
                            @class = "form-control",
                            @placeholder = "Digite o nome do plano"
                         })
                <br />

                <label>Descrição do Plano:</label>
                @Html.TextAreaFor(model => model.Descricao, 
                    new
                        {            
                           @class = "form-control",
                           @placeholder = "Digite a descrição do plano"
                        })
                <br />

                <input type="submit" class="btn btn-success"
                       value="Cadastrar Plano"/>

            </div>
        </div>
    }

</body>
</html>
