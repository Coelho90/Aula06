
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>COTI Informatica</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />


</head>
<body class="container">

    <h2>Atualizar Plano</h2>
    <a href="/Plano/Consulta">Consultar Plano</a>
    <hr />

    @model Projeto.WEB.Models.PlanoEdicaoViewModel
    @using (Html.BeginForm())
    {
        <div class="row">
            <div class="col-md-4">
                @Html.HiddenFor(model => model.IdPlano)

                <label>Nome do Plano:</label>
                @Html.TextBoxFor(model => model.Nome,
                   new
                   {
                       @class = "form-control",
                       @placeholder = "Digite o nome do plano"

                   })
                <span class="text-danger">
                    @Html.ValidationMessageFor(model => model.Nome)
                </span>
                <br />

                <label>Descrição do plano:</label>
                @Html.TextAreaFor(model => model.Descricao,
               new
               {
                   @class = "form-control",
                   @placeholder = "Digite a descrição do plano"
               })
                <span class="text-danger">
                    @Html.ValidationMessageFor(model => model.Descricao)
                </span>
                <br />

                <input type="submit" class="btn btn-primary" value="Atualizar plano" />
                <hr />

                <strong>@ViewBag.Mensagem</strong>

            </div>
        </div>
    }




</body>
</html>
